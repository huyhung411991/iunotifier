<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ProgressBar
        android:id="@+id/events_progressBar"
        style="@android:style/Widget.Holo.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true" />

    <TableLayout
        android:id="@+id/events_toggleButtons_tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*" >

        <TableRow style="@android:style/Widget.Holo.Light.ActionBar" >

            <ToggleButton
                android:id="@+id/events_allEvents_button"
                style="@android:style/Widget.Holo.Light.Button.Toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/events_allEvents"
                android:textOff="@string/events_allEvents"
                android:textOn="@string/events_allEvents"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/events_todayEvents_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/events_todayEvents"
                android:textOff="@string/events_todayEvents"
                android:textOn="@string/events_todayEvents"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/events_upcomingEvents_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/events_upcomingEvents"
                android:textOff="@string/events_upcomingEvents"
                android:textOn="@string/events_upcomingEvents"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/events_toggleButtons_tableLayout"
        android:layout_marginTop="12dp" >
    </ListView>

</RelativeLayout>